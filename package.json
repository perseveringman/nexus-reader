{
  "name": "nexus-reader",
  "version": "1.0.0",
  "description": "AI-powered personal information command center",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development npm run build:main && electron .",
    "build": "npm run build:main && vite build",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:electron": "npm run build && electron-builder",
    "postinstall": "electron-rebuild",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'No linter configured yet'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perseveringman/nexus-reader.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/perseveringman/nexus-reader/issues"
  },
  "homepage": "https://github.com/perseveringman/nexus-reader#readme",
  "type": "module",
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@extractus/article-extractor": "^8.0.20",
    "better-sqlite3": "^12.6.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rss-parser": "^3.13.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.11"
  }
}
